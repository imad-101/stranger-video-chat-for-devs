generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  name      String
  age       String
  gender    String
  interests String[]
  bio       String
  location  String?
  lookingFor String
  isOnline  Boolean  @default(false)
  lastSeen  DateTime @default(now())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // Chat sessions where this user participated
  chatSessions ChatSession[]
  
  @@map("users")
}

model ChatSession {
  id          String   @id @default(cuid())
  users       User[]
  startedAt   DateTime @default(now())
  endedAt     DateTime?
  duration    Int?     // Duration in seconds
  status      String   @default("active") // active, ended, disconnected
  
  @@map("chat_sessions")
}
